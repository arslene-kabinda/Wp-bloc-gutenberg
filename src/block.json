{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "create-block/heroes-block",
	"version": "0.1.0",
	"title": "Heroes Block",
	"category": "widgets",
	"icon": "smiley",
	"description": "Example block scaffolded with Create Block tool.",
	"supports": {
		"html": false
	},
	"textdomain": "heroes-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",

	"keywords": ["heroes", "block"],
	"attributes": {
		"content": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"contentTitle": {
			"type": "string",
			"source": "html",
			"selector": "h1"
		}
	},

	"align": {
		"type": "string",
		"default": "none"
	},
	"backgroundColor": {
		"type": "string"
	},
	"textColor": {
		"type": "string"
	},
	"kaLink": {
		"type": "string",
		"default": ""
	},
	"linkLabel": {
		"type": "string",
		"default": "Check it out!"
	},
	"hasLinkNofollow": {
		"type": "boolean",
		"default": false
	},
	"styles": [
		{
			"name": "default",
			"label": "Default",
			"isDefault": true
		},
		{
			"name": "border",
			"label": "Border"
		}
	]
}
